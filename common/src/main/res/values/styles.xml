<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ProgressBarCardViewStyle">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/blue_linear</item>
    </style>

    <style name="TitlesStyle">
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/app_text_default</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/app_text_default</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="CustomTextInputEditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">@dimen/dp_2x</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/blue_linear</item>
        <item name="android:padding">@dimen/dp_2x</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>