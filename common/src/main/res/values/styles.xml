<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ProgressBarCardViewStyle">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/blue_linear</item>
    </style>

    <style name="TitlesStyle">
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

</resources>